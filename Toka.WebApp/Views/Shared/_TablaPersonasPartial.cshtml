@model List<Toka.Core.Models.PersonasFisicas>

@{
    Layout = "";
}

<table class="table w-100 table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().IdPersonaFisica)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Nombre)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().ApellidoPaterno)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().ApellidoMaterno)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().FechaNacimiento)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().FechaRegistro)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr>
                <td class="text-center" colspan="7">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Cargando registros...</span>
                    </div>
                </td>
            </tr>
        }
        else if (Model.Count == 0)
        {
            <tr>
                <td class="text-center" colspan="7">
                    <span>No se encontraron registros</span>
                </td>
            </tr>
        }
        else
        {
            foreach (var persona in Model)
            {
                <tr>
                    <td>@persona.IdPersonaFisica</td>
                    <td>@persona.Nombre</td>
                    <td>@persona.ApellidoPaterno</td>
                    <td>@persona.ApellidoMaterno</td>
                    <td>@(persona.FechaNacimiento.ToString("dd/MM/yyyy"))</td>
                    <td>@persona.FechaRegistro</td>
                    <td>
                        <a asp-action="Detalle" asp-route-id="@persona.IdPersonaFisica" class="btn btn-primary btn-sm">Detalle</a>
                        <a asp-action="Editar" asp-route-id="@persona.IdPersonaFisica" class="btn btn-success btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@persona.IdPersonaFisica" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>