@model Toka.Core.Models.PersonasFisicas

@{
    ViewData["Title"] = "Eliminar persona";
}

<h1>@ViewData["Title"]</h1>
@if (Model == null)
{
    <div>
        <hr />
        <span>No se encontró la información</span>
    </div>
}
else
{
    <h3>¿Está seguro de eliminar el registro?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdPersonaFisica)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdPersonaFisica)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaActualizacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaActualizacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApellidoPaterno)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApellidoPaterno)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApellidoMaterno)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApellidoMaterno)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RFC)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RFC)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaNacimiento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UsuarioAgrega)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsuarioAgrega)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Activo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Activo)
            </dd>
        </dl>

        <form asp-action="Eliminar">
            <input asp-for="IdPersonaFisica" class="form-control" type="hidden" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
}